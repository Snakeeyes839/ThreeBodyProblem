#:kivy 1.0.9

<PhysicsBody>:
    ui: body_ui
    size: 10, 10
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

    BodyUI:
        id: body_ui



<BodyUI>
    position_x: pos_x
    position_y: pos_y
    velocity_x: vel_x
    velocity_y: vel_y
    mass: mass
    radius: rad
    grid: grid

    GridLayout:
        id: grid
        cols: 2
        spacing: 5

        pos: (0,0)

        row_force_default: True
        row_default_height: 30
        col_force_default: True
        col_default_width: 100

        Label:
            text: "Position"
        BoxLayout:
            orientation: "horizontal"
            TextInput:
                id: pos_x
                text: "0"
            TextInput:
                id: pos_y
                text: "0"
        Label:
            text: "Velocity"
        BoxLayout:
            orientation: "horizontal"
            TextInput:
                id: vel_x
                text: "0"
            TextInput:
                id: vel_y
                text: "0"
        Label:
            text: "Mass"
        TextInput:
            id: mass
            text: "2000"
        Label:
            text: "Radius"
        TextInput:
            id: rad
            text: "10"


<ThreeBodySim>:
    add_btn: add_button
    play_btn: play_button

    Label:
        font_size: 50
        center_x: root.width / 2
        top: root.top - 30
        text: "Three Body Problem"

    Button:
        id:add_button
        center_x: root.width / 2
        size: 150, 30
        y: 30
        text: "Add Physics Body"

    Button:
        id:play_button
        center_x: root.width - 65
        size: 50, 30
        y: 30
        text: "Play"